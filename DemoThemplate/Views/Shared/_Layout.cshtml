<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DemoThemplate</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DemoThemplate.styles.css" asp-append-version="true" />
    <script src="https://kit.fontawesome.com/9152de16db.js" crossorigin="anonymous"></script>
  
</head>
<body>

        <!-- Navbar -->
    
        <nav class="container-fluid bg-light shadow-sm align-items-center bg-secondary">
            <nav class="container d-flex justify-content-between align-items-center ">
              <p class="text-uppercase m-0">Welcome to DR-STOR </p>
                <ul class="d-flex gap-4 navbar align-items-center list-unstyled m-0">
                        <li class="d-flex align-items-center gap-1 ">
                        <a href="" class="text-black">
                            <span>Location</span>
                            <i class="fas fa-location-dot"></i>
                        </a>
                        </li>
                        <li class="d-flex align-items-center gap-1">
                        <a asp-controller="Login" asp-action="Index"  class="text-black">
                            <span>Login</span>
                            <i class="fas fa-arrow-right-from-bracket"></i>
                            </a>
                        </li>
                    <li class="d-flex align-items-center gap-1">
                        <a href="" class="text-black">

                        <span>Register</span>
                         <i class="fas fa-arrow-right-from-bracket"></i>
                        </a>
                    </li>
                </ul>
            </nav>
             </nav>

             <nav class="container-fluid">
            <div class="container align-items-center p-3" style="">
              <div class="row align-items-center">
                  <div class="col-3">1</div>
                  <div class="col-5">
                      <div class="input-group" >
                          <input type="text" name="name" value="" class="form-control p-2  placeholder-xs" placeholder="Search product brand and more" />
                            <button class="btn btn-success px-4"><i class="fa-solid fa-magnifying-glass"></i></button>
                      </div>
                  </div>
                  <div class="col-4">
                    <ul class="d-flex p-0 m-0 justify-content-center align-items-center btn" data-bs-toggle="modal" data-bs-target="#exampleModal">
                          <li class="">
                              <a  class="text-black d-flex gap-1 align-items-center" >
                                <i class="fa-solid fa-cart-arrow-down m-0" style="font-size:25px"></i>
                                <span style="font-size:18px">Cart</span>
                              </a>
                          </li>
                      </ul>

                  </div>
              </div>
                 </div>
             </nav>
             @* Modal show click on cart *@
                <div class="modal fade" id="exampleModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h1 class="modal-title fs-5" id="staticBackdropLabel">All Items</h1>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <ul>
                                     <li>1</li>  
                                 </ul>   
                            </div>
                            <div class="modal-footer">
                                  <a asp-controller="CheckOut" asp-action="Index">

                                <button class="btn btn-primary">Check Out</button>
                                </a>

                            </div>
                        </div>
                    </div>
    </div>
        <nav class="container-fluid p-3 position-sticky top-0" style="background-color:#0B0253;z-index:300">
            <nav class="container">
            <div class="row align-items-center">
            <div class="col-4 d-flex align-items-center">
                <h4 class="m-0 p-0 text-light">DR STORE</h4>
            </div>
            <div class="col-8">
                    <ul class="d-flex align-items-center m-0">
                    <li class="nav-link">
                        <a  class="txt-menu-bar btn-nav-hover text-uppercase" asp-controller="/" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-link">
                        <div class="btn-group">
                            <button type="button" class="btn fw-bold dropdown-toggle text-uppercase btn-nav-hover" style="" data-bs-toggle="dropdown" aria-expanded="false">
                                categories
                            </button>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Categories" asp-action="Phone">Phone</a></li>
                                <li><a class="dropdown-item" asp-controller="Categories" asp-action="Laptop">Laptop</a></li>
                                <li><a class="dropdown-item" href="#">Something else here</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="#">Separated link</a></li>
                            </ul>
                        </div>
                    </li>
                    <li class="nav-link">
                                <a class="txt-menu-bar btn-nav-hover text-uppercase" asp-controller="About" asp-action="Index">About Us</a>
                    </li>
                    <li class="nav-link">
                       <a class="txt-menu-bar btn-nav-hover text-uppercase" asp-controller="Contact" asp-action="Index">Contact Us</a>

                    </li>
                    </ul>
                </div>
            </div>
            </nav>
        </nav>


    <div class="container-fluid p-0">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="container-fluid py-4" style="background-color:#0D0A24">
        <div class="container py-5">
       <div class="row">
           <div class="col-3">
                    <h4 class="text-white">Categories</h4>
               <ul>
                    <li class="my-2">
                        <a href="#" class="text-white">Mobile</a>
                    </li>
                        <li class="my-2">
                            <a href="#" class="text-white">Mobile</a>
                        </li>
               </ul>
           </div>
           <div class="col-3">1</div>
           <div class="col-3">1</div>
           <div class="col-3">
                    <h4 class="text-white">Newsletter</h4>
                    <ul>
                        <li class="text-white my-3">Free Delivery on your first order!</li>
                        <li>
                            <form action="/" method="post">
                                    <div class="w-75">
                                <div class="input-group">
                            <input type="email" name="" value="" placeholder="Email" class="form-control w-75"/>
                            <button class="btn btn-primary"> 
                              <i class="fa-solid fa-paper-plane"></i>
                            </button>
                                 </div>
                                </div>
                            </form>
                        </li>
                        <li class="text-white mt-4 mb-1">Followe Us on</li>
                        <li class="d-flex gap-3 align-items-center my-1">
                            <i class="fa-brands fa-facebook text-primary" style="font-size:25px"></i>
                            <i class="fa-brands fa-square-twitter text-success" style=" font-size:25px"></i>
                            <i class="fa-brands fa-google-plus-g text-warning" style="font-size:25px"></i>
                        </li>
                    </ul>
           </div>
       </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
